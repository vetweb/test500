extends _layouts/default

block content

    include ../ui/modal/modal
    include ../ui/select/select
    include ../ui/input/input
    include ../ui/button/button
    include ../ui/button-circle/button-circle
    include ../ui/button-icon/button-icon
    include ../ui/button-close/button-close
    include ../ui/ui-menu/ui-menu

    .container
        .ui
            .ui__item
                .ui__header#buttons Buttons
                .ui__item-group
                    .ui__item-group-title Button Primary
                    +button({
                        text: 'Попробовать бесплатно',
                        type: 'button'
                    }).button-small.button-tablet-medium.button-desktop-large
                    +button({
                        text: 'Попробовать бесплатно',
                        type: 'button'
                    }).button--no-shadow.button-small.button-tablet-medium.button-desktop-large
                .ui__item-group
                    .ui__item-group-title Button Secondary
                    +button({
                        text: 'Попробовать бесплатно',
                        type: 'link-btn',
                        url: '##'
                    }).button--secondary.button-small.button-tablet-medium.button-desktop-large
                .ui__item-group
                    .ui__item-group-title Button Text
                    +button({
                        text: 'Button',
                        type: 'link',
                        url: '##',
                    })
                    br
                    +button({
                        text: 'Button',
                        type: 'link',
                        url: '##',
                        svgLeft: 'check-ic'
                    }).button--link-icon.button--link-icon-left
                    br
                    +button({
                        text: 'Button',
                        type: 'link',
                        url: '##',
                        svgRight: 'check-ic'
                    }).button--link-icon.button--link-icon-right
                .ui__item-group
                    .ui__item-group-title Button Circle White
                    +button-circle()
                    +button-circle().button-circle-small
                .ui__item-group
                    .ui__item-group-title Button Icon
                    +button-icon()
                    +button-icon().button-icon-small
                .ui__item-group
                    .ui__item-group-title Button Close
                    +button-close()
            .ui__item
                .ui__header#inputs Inputs
                .ui__item-group
                    .ui__item-group-title Inputs all
                    +input({
                        label: 'Label',
                        id: 'qwe',
                        errorMessage: 'Supporting text',
                        classes: '',
                    })(
                        type='text',
                        name='name',
                        required,
                    )
                    +input({
                        label: 'Label',
                        id: 'qwe',
                        errorMessage: 'Supporting text',
                        classes: '_error',
                    })(
                        type='text',
                        name='name',
                        required,
                    )
                    +input({
                        label: 'Label',
                        id: 'qwe',
                        errorMessage: 'Supporting text',
                        classes: '_small',
                    })(
                        type='text',
                        name='name',
                        required,
                    )
                    +input({
                        label: 'Label',
                        id: 'qwe',
                        errorMessage: 'Supporting text',
                        classes: '_error _small',
                    })(
                        type='text',
                        name='name',
                        required,
                    )
            .ui__item
                .ui__header#selects Selects
                .ui__item-group
                    .ui__item-group-title Selects
                    +select({
                        id: 'example-select',
                        options: [
                            {value: 'option1', text: 'Option fsdf 1', selected: true},
                            {value: 'option2', text: 'Option ffd 2'},
